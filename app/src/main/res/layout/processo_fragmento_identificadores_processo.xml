<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/cvProcesso"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="2dp"
        android:padding="0dp"
        card_view:cardBackgroundColor="#fbfbfb"
        card_view:cardCornerRadius="4dp"
        card_view:cardElevation="4dp"
        card_view:contentPadding="4dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Processo"
                android:layout_marginBottom="12dp"
                android:layout_marginTop="3dp"
                android:fontFamily="sans-serif"
                android:textColor="#777777"
                android:textSize="18sp"
                android:textStyle="bold"
                android:typeface="sans"/>

            <RelativeLayout
                android:id="@+id/rlProcessoCategoria"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp">

                <TextView
                    android:id="@+id/tvProcessoCampoCategoria"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:text="Categoria"
                    android:textColor="#5555aa"
                    android:textSize="14sp"
                    android:typeface="sans" />

                <TextView
                    android:id="@+id/tvProcessoValorCategoria"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@id/tvProcessoCampoCategoria"
                    android:layout_toEndOf="@id/tvProcessoCampoCategoria"
                    android:layout_marginStart="3dp"
                    android:textAlignment="viewStart"
                    android:textColor="#456645"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:typeface="sans" />
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/rlProcessoEstado"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp">
                <TextView
                    android:id="@+id/tvProcessoCampoEstado"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:text="Estado"
                    android:textColor="#5555aa"
                    android:textSize="14sp"
                    android:typeface="sans" />

                <TextView
                    android:id="@+id/tvProcessoValorEstado"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@id/tvProcessoCampoEstado"
                    android:layout_toEndOf="@id/tvProcessoCampoEstado"
                    android:layout_marginStart="3dp"
                    android:textAlignment="viewStart"
                    android:textColor="#456645"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:typeface="sans" />
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/rlProcessoDescricao"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp">
                <TextView
                    android:id="@+id/tvProcessoCampoDescricao"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:text="Descrição"
                    android:textColor="#5555aa"
                    android:textSize="14sp"
                    android:typeface="sans" />

                <TextView
                    android:id="@+id/tvProcessoValorDescricao"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@id/tvProcessoCampoDescricao"
                    android:layout_toEndOf="@id/tvProcessoCampoDescricao"
                    android:layout_marginStart="3dp"
                    android:textAlignment="viewStart"
                    android:textColor="#456645"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:typeface="sans" />
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/rlProcessoFranquia"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp">
                <TextView
                    android:id="@+id/tvProcessoCampoFranquia"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:text="Franquia"
                    android:textColor="#5555aa"
                    android:textSize="14sp"
                    android:typeface="sans" />

                <TextView
                    android:id="@+id/tvProcessoValorFranquia"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@id/tvProcessoCampoFranquia"
                    android:layout_toEndOf="@id/tvProcessoCampoFranquia"
                    android:layout_marginStart="3dp"
                    android:textAlignment="viewStart"
                    android:textColor="#456645"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:typeface="sans" />
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/rlProcessoReferencia"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp">
                <TextView
                    android:id="@+id/tvProcessoCampoReferencia"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:text="Referência"
                    android:textColor="#5555aa"
                    android:textSize="14sp"
                    android:typeface="sans" />
                <TextView
                    android:id="@+id/tvProcessoValorReferencia"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@id/tvProcessoCampoReferencia"
                    android:layout_toEndOf="@id/tvProcessoCampoReferencia"
                    android:layout_marginStart="3dp"
                    android:textAlignment="viewStart"
                    android:textColor="#456645"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:typeface="sans" />
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/rlProcessoMediador"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp">
                <TextView
                    android:id="@+id/tvProcessoCampoMediador"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:text="Mediador"
                    android:textColor="#5555aa"
                    android:textSize="14sp"
                    android:typeface="sans" />
                <TextView
                    android:id="@+id/tvProcessoValorMediador"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@id/tvProcessoCampoMediador"
                    android:layout_toEndOf="@id/tvProcessoCampoMediador"
                    android:layout_marginStart="3dp"
                    android:textAlignment="viewStart"
                    android:textColor="#456645"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:typeface="sans" />
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/rlProcessoDanos"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp">
                <TextView
                    android:id="@+id/tvProcessoCampoDanos"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:text="Danos Estéticos"
                    android:textColor="#5555aa"
                    android:textSize="14sp"
                    android:typeface="sans" />
                <TextView
                    android:id="@+id/tvProcessoValorDanos"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@id/tvProcessoCampoDanos"
                    android:layout_toEndOf="@id/tvProcessoCampoDanos"
                    android:layout_marginStart="3dp"
                    android:textAlignment="viewStart"
                    android:textColor="#456645"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:typeface="sans" />
            </RelativeLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>

</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/cvSeguro"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="2dp"
        android:padding="0dp"
        card_view:cardBackgroundColor="#fbfbfb"
        card_view:cardCornerRadius="4dp"
        card_view:cardElevation="4dp"
        card_view:contentPadding="4dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Seguro"
                android:layout_marginBottom="12dp"
                android:layout_marginTop="3dp"
                android:fontFamily="sans-serif"
                android:textColor="#777777"
                android:textSize="18sp"
                android:textStyle="bold"
                android:typeface="sans"/>

            <RelativeLayout
                android:id="@+id/rlProcessoCompanhia"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp">

                <TextView
                    android:id="@+id/tvProcessoCampoCompanhia"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:text="Companhia"
                    android:textColor="#5555aa"
                    android:textSize="14sp"
                    android:typeface="sans" />

                <TextView
                    android:id="@+id/tvProcessoValorCompanhia"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@id/tvProcessoCampoCompanhia"
                    android:layout_toEndOf="@id/tvProcessoCampoCompanhia"
                    android:layout_marginStart="3dp"
                    android:textAlignment="viewStart"
                    android:textColor="#456645"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:typeface="sans" />
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/rlProcessoProduto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp">
                <TextView
                    android:id="@+id/tvProcessoCampoProduto"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:text="Produto"
                    android:textColor="#5555aa"
                    android:textSize="14sp"
                    android:typeface="sans" />
                <TextView
                    android:id="@+id/tvProcessoValorProduto"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@id/tvProcessoCampoProduto"
                    android:layout_toEndOf="@id/tvProcessoCampoProduto"
                    android:layout_marginStart="3dp"
                    android:textAlignment="viewStart"
                    android:textColor="#456645"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:typeface="sans"/>
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/rlProcessoApolice"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp">
                <TextView
                    android:id="@+id/tvProcessoCampoApolice"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:text="Apólice"
                    android:textColor="#5555aa"
                    android:textSize="14sp"
                    android:typeface="sans" />

                <TextView
                    android:id="@+id/tvProcessoValorApolice"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@id/tvProcessoCampoApolice"
                    android:layout_toEndOf="@id/tvProcessoCampoApolice"
                    android:layout_marginStart="3dp"
                    android:textAlignment="viewStart"
                    android:textColor="#456645"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:typeface="sans" />
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/rlProcessoSinistro"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp">
                <TextView
                    android:id="@+id/tvProcessoCampoSinistro"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:text="Sinistro"
                    android:textColor="#5555aa"
                    android:textSize="14sp"
                    android:typeface="sans" />
                <TextView
                    android:id="@+id/tvProcessoValorSinistro"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@id/tvProcessoCampoSinistro"
                    android:layout_toEndOf="@id/tvProcessoCampoSinistro"
                    android:layout_marginStart="3dp"
                    android:textAlignment="viewStart"
                    android:textColor="#456645"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:typeface="sans" />
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/rlProcessoContactoSeguro"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp">
                <TextView
                    android:id="@+id/tvProcessoCampoContactoSeguro"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:text="1º Contacto"
                    android:textColor="#5555aa"
                    android:textSize="14sp"
                    android:typeface="sans" />

                <TextView
                    android:id="@+id/tvProcessoValorContactoSeguro"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@id/tvProcessoCampoContactoSeguro"
                    android:layout_toEndOf="@id/tvProcessoCampoContactoSeguro"
                    android:layout_marginStart="3dp"
                    android:textAlignment="viewStart"
                    android:textColor="#456645"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:typeface="sans" />
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/rlProcessoReferencias"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp">
                <TextView
                    android:id="@+id/tvProcessoCampoReferencias"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:text="Referência(S)"
                    android:textColor="#5555aa"
                    android:textSize="14sp"
                    android:typeface="sans" />
                <TextView
                    android:id="@+id/tvProcessoValorReferencias"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@id/tvProcessoCampoReferencias"
                    android:layout_toEndOf="@id/tvProcessoCampoReferencias"
                    android:layout_marginStart="3dp"
                    android:textAlignment="viewStart"
                    android:textColor="#456645"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:typeface="sans" />
            </RelativeLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>

</LinearLayout>
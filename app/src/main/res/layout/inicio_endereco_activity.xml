<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.dlsra.assistenciatecnica707.InicioEndereco">

    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:id="@+id/textInputLayout">

        <AutoCompleteTextView
            android:id="@+id/etEnderecoElectronico"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/prompt_endereco_electronico"
            android:maxLines="1"
            android:maxLength="120"
            android:inputType="text"
            android:textSize="14sp" />

    </android.support.design.widget.TextInputLayout>

    <Button
        android:id="@+id/btRegistarEndereco"
        style="@style/Widget.AppCompat.Button.Borderless.Colored"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="@string/action_endereco"
        android:textStyle="bold"
        android:layout_below="@+id/textInputLayout"
        android:layout_alignParentEnd="true" />

</RelativeLayout>

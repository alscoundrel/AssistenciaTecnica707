<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.dlsra.assistenciatecnica707.ProcessoFragmentoIdentificadores">
    <ScrollView
        android:id="@+id/scEmDescricao"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <include
                layout="@layout/processo_fragmento_identificadores_cliente"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <include
                layout="@layout/processo_fragmento_identificadores_seguro"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <include
                layout="@layout/processo_fragmento_identificadores_processo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <include
                layout="@layout/processo_fragmento_identificadores_lesados"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <include
                layout="@layout/processo_fragmento_identificadores_perito"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <include
                layout="@layout/processo_fragmento_identificadores_clientefinal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <include
                layout="@layout/processo_fragmento_identificadores_assistencia"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <include
                layout="@layout/processo_fragmento_identificadores_moradaobra"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </ScrollView>
</FrameLayout>

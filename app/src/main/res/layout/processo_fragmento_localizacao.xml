<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.dlsra.assistenciatecnica707.ProcessoFragmentoLocalizacao">

    <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="2dp"
        android:layout_marginEnd="2dp"
        android:layout_marginStart="2dp"
        android:layout_marginTop="6dp"
        android:padding="0dp"
        card_view:cardBackgroundColor="#fbfbfb"
        card_view:cardCornerRadius="4dp"
        card_view:cardElevation="4dp"
        card_view:contentPadding="4dp">

        <RelativeLayout
            android:id="@+id/caixaLocalizacao"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textViewML"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="34dp"
                android:text="Minha Localização Actual"
                android:textAppearance="?android:attr/textAppearanceLarge" />


            <TextView
                android:id="@+id/tvFLatitude"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textViewML"
                android:layout_marginStart="45dp"
                android:layout_marginTop="20dp"
                android:text="Latitude"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvLatitude"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/tvLongitude"
                android:layout_alignTop="@+id/tvFLatitude"
                android:text="0.0000000"
                android:textAppearance="?android:attr/textAppearanceSmall" />

            <TextView
                android:id="@+id/tvFLongitude"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="false"
                android:layout_alignParentStart="false"
                android:layout_alignParentTop="false"
                android:layout_alignStart="@+id/tvFLatitude"
                android:layout_below="@+id/tvFLatitude"
                android:layout_marginTop="25dp"
                android:text="Longitude"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvLongitude"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/tvFLongitude"
                android:layout_marginLeft="44dp"
                android:layout_toEndOf="@+id/tvFLongitude"
                android:text="0.0000000"
                android:textAppearance="?android:attr/textAppearanceSmall" />

            <TextView
                android:id="@+id/textView7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/tvFLongitude"
                android:layout_below="@+id/tvFLongitude"
                android:layout_marginTop="25dp"
                android:text="Actualizado em"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/textView7"
                android:layout_below="@+id/textView7"
                android:layout_marginTop="25dp"
                android:text="Precisão"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvActualizado"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/tvLongitude"
                android:layout_alignTop="@+id/textView7"
                android:text="data"
                android:textAppearance="?android:attr/textAppearanceSmall" />

            <TextView
                android:id="@+id/tvPrecisao"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/tvActualizado"
                android:layout_alignTop="@+id/textView8"
                android:text="precisao"
                android:textAppearance="?android:attr/textAppearanceSmall" />

            <TextView
                android:id="@+id/textView9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/textView8"
                android:layout_below="@+id/textView8"
                android:layout_marginTop="25dp"
                android:text="Provador"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvProvador"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/tvPrecisao"
                android:layout_alignTop="@+id/textView9"
                android:text="Provador"
                android:textAppearance="?android:attr/textAppearanceSmall" />

            <Button
                android:id="@+id/btMarcarPosicao"
                style="@android:style/Widget.Holo.Button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tvProvador"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="12dp"
                android:text="Marcar Posição" />

            <TextView
                android:id="@+id/textView10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/btMarcarPosicao"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="64dp"
                android:text="Localização armazenada do processo"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvCoordenadasObra"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="coordenadas"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:layout_above="@+id/tvInfoCoordenadasObra"
                android:layout_centerHorizontal="true" />

            <TextView
                android:id="@+id/tvInfoCoordenadasObra"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Manter pressionado as coordenadas para abrir a localização!"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textSize="8sp"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="11dp" />

        </RelativeLayout>
    </android.support.v7.widget.CardView>

</FrameLayout>

<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/cvClienteFinal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="2dp"
        android:padding="0dp"
        card_view:cardBackgroundColor="#fbfbfb"
        card_view:cardCornerRadius="4dp"
        card_view:cardElevation="4dp"
        card_view:contentPadding="4dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/tvProcessoTituloClienteFinal"
                android:text="Cliente"
                android:layout_marginBottom="12dp"
                android:layout_marginTop="3dp"
                android:fontFamily="sans-serif"
                android:textColor="#777777"
                android:textSize="18sp"
                android:textStyle="bold"
                android:typeface="sans"/>

            <RelativeLayout
                android:id="@+id/rlProcessoClienteFinalNome"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp">

                <TextView
                    android:id="@+id/tvProcessoCampoClienteFinalNome"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:text="Nome"
                    android:textColor="#5555aa"
                    android:textSize="14sp"
                    android:typeface="sans" />

                <TextView
                    android:id="@+id/tvProcessoValorClienteFinalNome"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@id/tvProcessoCampoClienteFinalNome"
                    android:layout_toEndOf="@id/tvProcessoCampoClienteFinalNome"
                    android:layout_marginStart="3dp"
                    android:textAlignment="viewStart"
                    android:textColor="#456645"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:typeface="sans" />
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/rlProcessoClienteFinalMorada"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp">
                <TextView
                    android:id="@+id/tvProcessoCampoClienteFinalMorada"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:text="Morada"
                    android:textColor="#5555aa"
                    android:textSize="14sp"
                    android:typeface="sans" />

                <TextView
                    android:id="@+id/tvProcessoValorClienteFinalMorada"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@id/tvProcessoCampoClienteFinalMorada"
                    android:layout_toEndOf="@id/tvProcessoCampoClienteFinalMorada"
                    android:layout_marginStart="3dp"
                    android:textAlignment="viewStart"
                    android:textColor="#456645"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:typeface="sans" />
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/rlProcessoClienteFinalContactos"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp">
                <TextView
                    android:id="@+id/tvProcessoCampoClienteFinalContactos"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:text="Contacto(s)"
                    android:textColor="#5555aa"
                    android:textSize="14sp"
                    android:typeface="sans" />

                <TextView
                    android:id="@+id/tvProcessoValorClienteFinalContactos"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@id/tvProcessoCampoClienteFinalContactos"
                    android:layout_toEndOf="@id/tvProcessoCampoClienteFinalContactos"
                    android:layout_marginStart="3dp"
                    android:textAlignment="viewStart"
                    android:textColor="#456645"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:typeface="sans" />
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/rlProcessoClienteFinalOutrosContactos"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp">
                <TextView
                    android:id="@+id/tvProcessoCampoClienteFinalOutrosContactos"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:text="Outros Contacto(s)"
                    android:textColor="#5555aa"
                    android:textSize="14sp"
                    android:typeface="sans" />

                <TextView
                    android:id="@+id/tvProcessoValorClienteFinalOutrosContactos"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@id/tvProcessoCampoClienteFinalOutrosContactos"
                    android:layout_toEndOf="@id/tvProcessoCampoClienteFinalOutrosContactos"
                    android:layout_marginStart="3dp"
                    android:textAlignment="viewStart"
                    android:textColor="#456645"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:typeface="sans" />
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/rlProcessoClienteFinalContribuinte"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp">
                <TextView
                    android:id="@+id/tvProcessoCampoClienteFinalContribuinte"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:text="Contribuinte"
                    android:textColor="#5555aa"
                    android:textSize="14sp"
                    android:typeface="sans" />

                <TextView
                    android:id="@+id/tvProcessoValorClienteFinalContribuinte"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@id/tvProcessoCampoClienteFinalContribuinte"
                    android:layout_toEndOf="@id/tvProcessoCampoClienteFinalContribuinte"
                    android:layout_marginStart="3dp"
                    android:textAlignment="viewStart"
                    android:textColor="#456645"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:typeface="sans" />
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/rlProcessoClienteFinalCoordenadas"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp">
                <TextView
                    android:id="@+id/tvProcessoCampoClienteFinalCoordenadas"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:text="Coordenadas"
                    android:textColor="#5555aa"
                    android:textSize="14sp"
                    android:typeface="sans" />
                <TextView
                    android:id="@+id/tvProcessoValorClienteFinalCoordenadas"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@id/tvProcessoCampoClienteFinalCoordenadas"
                    android:layout_toEndOf="@id/tvProcessoCampoClienteFinalCoordenadas"
                    android:layout_marginStart="3dp"
                    android:textAlignment="viewStart"
                    android:textColor="#456645"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:typeface="sans" />
            </RelativeLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>

</LinearLayout>